{
  "manifest_version": 3,
  "name": "VU Empire Genie",
  "version": "1.0.0",
  "description": "AI-powered assistant for VU LMS with lecture automation, GDB solving, and quiz assistance",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "downloads"
  ],
  "host_permissions": [
    "https://vulms.vu.edu.pk/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "32": "assets/icons/icon32.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },
  "icons": {
    "16": "assets/icons/icon16.png",
    "32": "assets/icons/icon32.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://vulms.vu.edu.pk/LessonViewer.aspx*"
      ],
      "js": [
        "scripts/content_main.js"
      ],
      "run_at": "document_end",
      "world": "MAIN"
    },
    {
      "matches": [
        "https://vulms.vu.edu.pk/Quiz/*",
        "https://vulms.vu.edu.pk/FormativeAssessment/*"
      ],
      "js": [
        "scripts/content_isolated.js"
      ],
      "run_at": "document_end",
      "world": "ISOLATED",
      "all_frames": true
    },
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "scripts/pdfGenerator.js"
      ],
      "run_at": "document_idle",
      "world": "ISOLATED"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "scripts/content_main.js",
        "scripts/content_isolated.js",
        "scripts/injector.js",
        "scripts/pdfGenerator.js"
      ],
      "matches": [
        "https://vulms.vu.edu.pk/*",
        "<all_urls>"
      ]
    }
  ]
}