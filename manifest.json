{
  "manifest_version": 3,
  "name": "VU Empire Genie",
  "version": "1.0.0",
  "description": "AI-powered assistant for VU LMS with lecture automation, GDB solving, and quiz assistance",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "downloads"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "32": "assets/icons/icon32.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },
  "icons": {
    "16": "assets/icons/icon16.png",
    "32": "assets/icons/icon32.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://vulms.vu.edu.pk/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end",
      "world": "ISOLATED",
      "all_frames": true
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "host_permissions": [
    "https://vulms.vu.edu.pk/*",
    "https://generativelanguage.googleapis.com/*"
  ]
}