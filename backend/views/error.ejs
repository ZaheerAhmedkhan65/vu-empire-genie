<%- include('partials/_header') %>
    <%- include('partials/_navbar') %>

        <div class="container py-5">
            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6">
                    <div class="text-center">
                        <div class="display-1 fw-bold text-muted mb-4">
                            <% if (title==='Page Not Found' ) { %>
                                404
                                <% } else { %>
                                    <i class="bi bi-exclamation-triangle"></i>
                                    <% } %>
                        </div>
                        <h1 class="mb-3">
                            <%= title || 'Error' %>
                        </h1>
                        <p class="lead mb-4">
                            <%= message || 'Something went wrong' %>
                        </p>

                        <% if (error) { %>
                            <div class="alert alert-light border text-start mb-4">
                                <small class="text-muted">Error details:</small>
                                <code class="d-block mt-2"><%= error %></code>
                            </div>
                            <% } %>

                                <div class="d-flex justify-content-center gap-3">
                                    <a href="/" class="btn btn-primary">
                                        <i class="bi bi-house-door me-2"></i>Go to Dashboard
                                    </a>
                                    <a href="/health" class="btn btn-outline-secondary">
                                        <i class="bi bi-heart-pulse me-2"></i>Health Check
                                    </a>
                                </div>
                    </div>
                </div>
            </div>
        </div>

        <%- include('partials/_footer') %>

            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
            </body>

            </html>