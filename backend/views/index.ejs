<%- include('partials/_header') %>
    <%- include('partials/_navbar') %>

        <main class="container py-4">
            <!-- Header Section -->
            <div class="row mb-5">
                <div class="col-12">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h1 class="display-5 fw-bold mb-2">VU Empire Genie</h1>
                            <p class="lead text-muted">
                                <i class="bi bi-info-circle me-2"></i>
                                Powered by VU Empire
                            </p>
                        </div>
                        <div class="text-end">
                            <div class="api-link">
                                <i class="bi bi-link-45deg me-2"></i>
                                API: POST /api/quiz/save
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Statistics Cards -->
            <div class="row mb-4">
                <div class="col-md-3 col-sm-6 mb-3">
                    <div class="stat-card p-4">
                        <div class="d-flex align-items-center">
                            <div class="stat-icon bg-primary bg-opacity-10 text-primary me-3">
                                <i class="bi bi-book"></i>
                            </div>
                            <div>
                                <h3 class="mb-0 fw-bold">
                                    <%= overallStats.total_courses || 0 %>
                                </h3>
                                <p class="text-muted mb-0">Courses</p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-3 col-sm-6 mb-3">
                    <div class="stat-card p-4">
                        <div class="d-flex align-items-center">
                            <div class="stat-icon bg-success bg-opacity-10 text-success me-3">
                                <i class="bi bi-question-circle"></i>
                            </div>
                            <div>
                                <h3 class="mb-0 fw-bold">
                                    <%= overallStats.total_questions || 0 %>
                                </h3>
                                <p class="text-muted mb-0">Questions</p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-3 col-sm-6 mb-3">
                    <div class="stat-card p-4">
                        <div class="d-flex align-items-center">
                            <div class="stat-icon bg-warning bg-opacity-10 text-warning me-3">
                                <i class="bi bi-calendar-check"></i>
                            </div>
                            <div>
                                <h3 class="mb-0 fw-bold">
                                    <%= overallStats.days_active || 0 %>
                                </h3>
                                <p class="text-muted mb-0">Active Days</p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-3 col-sm-6 mb-3">
                    <div class="stat-card p-4">
                        <div class="d-flex align-items-center">
                            <div class="stat-icon bg-info bg-opacity-10 text-info me-3">
                                <i class="bi bi-clock-history"></i>
                            </div>
                            <div>
                                <h3 class="mb-0 fw-bold">
                                    <% if (overallStats.latest_question_date) { %>
                                        <%= new Date(overallStats.latest_question_date).toLocaleDateString() %>
                                            <% } else { %>
                                                N/A
                                                <% } %>
                                </h3>
                                <p class="text-muted mb-0">Last Updated</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Charts and Course Stats -->
            <div class="row mb-4">
                <!-- Activity Chart -->
                <div class="col-lg-8 mb-4">
                    <div class="chart-container">
                        <h4 class="mb-3">
                            <i class="bi bi-graph-up me-2"></i>
                            Question Activity (Last 30 Days)
                        </h4>
                        <div style="height: 300px;">
                            <canvas id="activityChart"></canvas>
                        </div>
                    </div>
                </div>

                <!-- Course Stats -->
                <div class="col-lg-4 mb-4">
                    <div class="chart-container h-100">
                        <h4 class="mb-3">
                            <i class="bi bi-collection me-2"></i>
                            Questions by Course
                        </h4>
                        <div class="table-responsive" style="max-height: 300px; overflow-y: auto;">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Course</th>
                                        <th class="text-end">Questions</th>
                                        <th class="text-end">Last Updated</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% courseStats.forEach(course=> { %>
                                        <tr>
                                            <td>
                                                <span class="course-badge">
                                                    <%= course.course_code %>
                                                </span>
                                                <div class="text-muted small mt-1">
                                                    <%= course.course_name %>
                                                </div>
                                            </td>
                                            <td class="text-end fw-bold">
                                                <%= course.question_count %>
                                            </td>
                                            <td class="text-end text-muted small">
                                                <%= course.last_updated || 'N/A' %>
                                            </td>
                                        </tr>
                                        <% }); %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Recent Questions -->
            <div class="row">
                <div class="col-12">
                    <div class="chart-container">
                        <h4 class="mb-3">
                            <i class="bi bi-clock me-2"></i>
                            Recently Added Questions
                        </h4>
                        <% if (recentQuestions.length> 0) { %>
                            <% recentQuestions.forEach(question=> { %>
                                <div class="question-preview">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <div>
                                            <span class="course-badge me-2">
                                                <%= question.course_code %>
                                            </span>
                                            <span class="badge bg-success">
                                                <i class="bi bi-check-circle me-1"></i>
                                                Correct: <%= question.correct_answers %>
                                            </span>
                                        </div>
                                        <small class="text-muted">
                                            <i class="bi bi-calendar me-1"></i>
                                            <%= question.added_time %>
                                        </small>
                                    </div>
                                    <p class="mb-0">
                                        <%= question.question_preview %>...
                                    </p>
                                    <small class="text-muted">ID: <%= question.question_id %></small>
                                </div>
                                <% }); %>
                                    <% } else { %>
                                        <div class="text-center py-5">
                                            <i class="bi bi-inbox display-1 text-muted mb-3"></i>
                                            <h5 class="text-muted">No questions added yet</h5>
                                            <p class="text-muted">Start collecting quiz questions using the API</p>
                                        </div>
                                        <% } %>
                    </div>
                </div>
            </div>

            <!-- API Documentation -->
            <div class="row mt-4">
                <div class="col-12">
                    <div class="chart-container">
                        <h4 class="mb-3">
                            <i class="bi bi-code-slash me-2"></i>
                            API Endpoints
                        </h4>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="api-link">
                                    <strong>POST</strong> /api/quiz/save
                                    <div class="text-muted small mt-1">Save quiz questions to bank</div>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="api-link">
                                    <strong>GET</strong> /api/quiz/bank
                                    <div class="text-muted small mt-1">Get all questions</div>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="api-link">
                                    <strong>GET</strong> /api/quiz/course/:code
                                    <div class="text-muted small mt-1">Get questions by course</div>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="api-link">
                                    <strong>GET</strong> /health
                                    <div class="text-muted small mt-1">Server health check</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>

        <%- include('partials/_footer') %>

            <script>
                // Update current time
                function updateTime() {
                    const now = new Date();
                    document.getElementById('current-time').textContent =
                        now.toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' });
                }
                updateTime();
                setInterval(updateTime, 60000);

   // Initialize activity chart
<% if (dailyStats.length > 0) { %>
const ctx = document.getElementById('activityChart').getContext('2d');
        const activityChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: [
            <% dailyStats.forEach((stat, index) => { %>
                    '<%= new Date(stat.date).toLocaleDateString('en-US', {month: 'short', day: 'numeric'}) %>' <%= index < dailyStats.length - 1 ? ',' : '' %>
            <% }); %>
        ],
        datasets: [{
            label: 'Questions Added',
            data: [
                <% dailyStats.forEach((stat, index) => { %>
                    <%= stat.question_count %><%= index < dailyStats.length - 1 ? ',' : '' %>
                <% }); %>
            ],
            backgroundColor: 'rgba(67, 97, 238, 0.1)',
            borderColor: 'rgba(67, 97, 238, 1)',
            borderWidth: 2,
            tension: 0.4,
            fill: true
        }]
    },
    options: {
        responsive: true,
            maintainAspectRatio: false,
                plugins: {
            legend: {
                display: false
            }
        },
        scales: {
            y: {
                beginAtZero: true,
                    grid: {
                    drawBorder: false
                },
                ticks: {
                    stepSize: 1
                }
            },
            x: {
                grid: {
                    display: false
                }
            }
        }
    }
});
<% } else { %>
        // Show placeholder if no data
        document.getElementById('activityChart').parentElement.innerHTML = `
    <div class="text-center py-5">
        <i class="bi bi-graph-up display-1 text-muted mb-3"></i>
        <h5 class="text-muted">No activity data yet</h5>
        <p class="text-muted">Start adding questions to see activity chart</p>
    </div>
`;
<% } %>

                    // Auto-refresh every 5 minutes
                    setTimeout(() => {
                        location.reload();
                    }, 300000); // 5 minutes
            </script>

            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
            </body>

            </html>